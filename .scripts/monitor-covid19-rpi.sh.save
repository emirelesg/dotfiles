#!/usr/bin/bash

# Check if rpi is up and connected to the internet.
ping -c 1 rpi.local > /dev/null 2>&1
rc=$?
if [[ $rc -eq 0 ]] ; then
	# Check if service is running.
	data=$(curl -s rpi.local:3000)
	curlrc=$?
	if [[ $curlrc -eq 0 ]] ; then
		lastUpdate = python3 -c "import sys, json; print(json.load(sys.stdin)['name'])"
		echo "rpi up and service up"
	else
		echo "rpi up and service down"
	fi
else
	echo "rpi down"
fi
